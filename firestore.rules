
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permite que un usuario autenticado pueda crear su propio perfil.
    match /users/{userId} {
      allow read, create: if request.auth != null;
      allow update, delete: if request.auth.uid == userId;
    }
    
    // Permite a los usuarios autenticados leer datos de configuraci칩n.
    match /companies/{companyId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null; // Ajustado para que los Super Users puedan gestionar
    }
    match /sites/{siteId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null; // Ajustado para que los Admins/Super Users puedan gestionar
    }
    
    // Permite a los usuarios autenticados leer y escribir en los an치lisis y eventos.
    // Se pueden a침adir reglas m치s granulares posteriormente si es necesario.
    match /rcaAnalyses/{analysisId} {
        allow read, write: if request.auth != null;
    }
    match /reportedEvents/{eventId} {
        allow read, write: if request.auth != null;
    }
  }
}
