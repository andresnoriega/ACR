rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Regla para la colección de usuarios
    match /users/{userId} {
      // Cualquiera puede leer perfiles (necesario para mostrar nombres, etc.)
      allow read: if request.auth != null;
      // Cualquiera puede crear su propio perfil inicial
      allow create: if request.auth != null;
      // Permitir la actualización/eliminación si:
      // 1. El usuario está modificando su propio perfil.
      // O
      // 2. El usuario que hace la petición tiene el rol de 'Super User'.
      allow update, delete: if request.auth.uid == userId 
                              || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Super User';
    }
    
    // Reglas para la configuración
    match /companies/{companyId} {
        allow read: if request.auth != null;
        // Solo los Super Users pueden crear, editar o eliminar empresas.
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Super User';
    }

    match /sites/{siteId} {
        allow read: if request.auth != null;
        // Solo los Super Users pueden crear, editar o eliminar sitios.
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Super User';
    }
    
    // Reglas para los análisis y eventos reportados
    match /rcaAnalyses/{analysisId} {
        // Permitir lectura y escritura a cualquier usuario autenticado por ahora.
        // Se puede refinar después para que solo usuarios de la misma empresa puedan acceder.
        allow read, write: if request.auth != null;
    }

    match /reportedEvents/{eventId} {
        allow read, write: if request.auth != null;
    }
  }
}