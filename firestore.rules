
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regla de seguridad simple para desarrollo y aplicaciones internas.
    // Permite la lectura y escritura a cualquier usuario que haya iniciado sesión.
    // La lógica de negocio y los permisos más granulares se manejan en el código de la aplicación.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
